<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Hello, world!</title>

</head>

<body class="text-center">
    <header>
        <nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/user/main">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <% if(session==null){ %>
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/signin"
                                    style="margin-right: 10px;">로그인</a></li>
                            <li class="nav-item"><a class="nav-link active" aria-current="page"
                                    href="/user/signup">회원가입</a></li>
                            <% } else{ %>
                                <li class="nav-item"><a class="nav-link active" aria-current="page">
                                        <%= session %>님 환영합니다
                                    </a></li>
                                <li class="nav-item"><a class="nav-link active" aria-current="page"
                                        href="/board/mypage/<%= session %>">마이페이지</a></li>
                                <li class="nav-item"><a class="nav-link active" aria-current="page"
                                        href="/user/logout">로그아웃</a></li>
                                <% } %>
                    </ul>
                </div>
            </div>
            </ul>
        </nav>

    </header>
    <br>
    <h3>
        <%= session %>님의 마이페이지 입니다!
    </h3>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>
                    <%= user[0].user_id %>
                </td>
            </tr>
            <tr>
                <th scope="row">이름</th>
                <td>
                    <%= user[0].user_name %>
                </td>
            </tr>
            <tr>
                <th scope="row">전화번호</th>
                <td colspan="2">
                    <%= user[0].user_tel %>
                </td>
            </tr>
            <tr>
                <th scope="row">주소</th>
                <td colspan="2">
                    <%= user[0].user_address %>
                </td>
            </tr>
            <tr>
                <th scope="row">선호하는 여행지</th>
                <td colspan="2">
                    <%= user[0].user_travel %>
                </td>
            </tr>
            <tr>
                <th scope="row">MBTI</th>
                <td colspan="2">
                    <%= user[0].mbti_mbti_id %>
                </td>
            </tr>
            <tr>
                <th scope="row">나이</th>
                <td colspan="2">
                    <%= user[0].user_age %>
                </td>
            </tr>
        </tbody>
    </table>
    <br>
    <div>
        <button type="submit" class="btn btn-dark" onclick="location.href='/board/mypage/update/<%= user[0].user_id %>'"> 수정
        </button>
    </div>



    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
    -->
</body>

</html>